# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{package.json, *.yaml, *.yml, *.repos}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[CMakeLists.txt]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# JetBrain's IDEs does NOT use empty final newline
# for its metadata files in .idea dir
[**/.idea/**/*]
insert_final_newline = false
